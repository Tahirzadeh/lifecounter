                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="-"
                android:id="@+id/p1Minus"
                android:onClick="p1Controls"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="+"
                android:id="@+id/p1Add"
                android:onClick="p1Controls"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
